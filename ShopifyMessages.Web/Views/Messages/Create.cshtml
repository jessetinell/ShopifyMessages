@model ShopifyMessages.Web.ViewModels.CreateViewModel

@if (ViewBag.ShopName == "jesse-9")
{
    @Html.ActionLink("Synka nya mallar", "SyncNewTemplates")
}

@if (Model.First)
{
    <h1>Create your first message</h1>
}
else
{
    <h1>Choose a template</h1>
}
@foreach (var template in Model.Templates)
{
    <div class="template">
        <a href="@Url.Action("Edit")?id=@template.Id">
            <img src="@template.PreviewImageUrl" alt="" width="150" />
        </a>
    </div>
}